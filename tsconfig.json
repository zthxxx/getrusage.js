{
  "root": true,
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
    },

    "noEmit": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/mock/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
